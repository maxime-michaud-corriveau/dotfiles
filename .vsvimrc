nnoremap n nzz
nnoremap gd gdzz
nnoremap '' `'zz
nnoremap ' `
nnoremap ` '

inoremap jj <Esc><Esc>
inoremap kj <Esc><Esc>
inoremap jk <Esc><Esc>
inoremap kk <Esc><Esc>

inoremap ZZ <Esc><Esc>ZZ

noremap <A-h> <C-o>h
noremap <A-j> <C-o>j
noremap <A-k> <C-o>k
noremap <A-l> <C-o>l

let mapleader = " "

" Allows changing window or tab with space+{hjkl} (sucks for vsplits tho)
nnoremap <Leader>j <C-W>j
nnoremap <Leader>k <C-W>k
nnoremap <Leader>h gT
nnoremap <Leader>l gt

nnoremap <CR> i<CR><Esc>

inoremap <A-A> <C-o>A
inoremap <A-I> <C-o>I
inoremap <A-o> <C-o>o
inoremap <A-O> <C-o>O
inoremap <C-BS> <C-o>db

nnoremap == :vsc ReSharper.ReSharper_ReformatCode<CR> 
nnoremap zv :vsc ReSharper.ReSharper_IntroVariable<CR>

vnoremap zv :vsc ReSharper.ReSharper_IntroVariable<CR>

noremap <C-F> :vsc ReSharper.ReSharper_GotoType<CR>
noremap <C-A-Q> :vsc ReSharper.ReSharper_GotoType<CR>

nnoremap ZG :vsc ReSharper.ReSharper_Generate<CR>

" In visual/insert mode, remap ctrl + v/p to copy/paste from system clipboard 
vnoremap <C-V> "+p
inoremap <C-V> <C-O>"+P
vnoremap <C-C> "+y
inoremap <C-C> <C-O>"+y

nnoremap ZQ :tabonly<CR>

nnoremap <Leader>dd :vsc Debug.Start<CR>
nnoremap <Leader>dr :vsc Debug.Restart<CR>
nnoremap <Leader>ds :vsc Debug.StopDebugging<CR>
