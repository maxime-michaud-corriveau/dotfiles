nnoremap n nzz
nnoremap gd gdzz
nnoremap '' `'zz

inoremap jj <Esc>
inoremap kj <Esc>
inoremap jk <Esc>
inoremap kk <Esc>

inoremap ZZ <Esc>ZZ

noremap <A-h> <C-o>h
noremap <A-j> <C-o>j
noremap <A-k> <C-o>k
noremap <A-l> <C-o>l

set rnu
set number

set ignorecase
set smartcase

let mapleader = " "

" Allows changing window with space+{hjkl}
nnoremap <Leader>j <C-W>j
nnoremap <Leader>k <C-W>k
nnoremap <Leader>h gT
nnoremap <Leader>l gt

nnoremap <CR> i<CR><Esc>
