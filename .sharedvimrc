nnoremap n nzz
nnoremap gd gdzz
nnoremap '' `'zz

inoremap jj j<Esc>
inoremap kj <Esc>
inoremap jk <Esc>
inoremap kk k<Esc>

inoremap ZZ <Esc>ZZ

noremap <A-h> <C-o>h
noremap <A-j> <C-o>j
noremap <A-k> <C-o>k
noremap <A-l> <C-o>l

set rnu
set number

set ignorecase
set smartcase
set incsearch
set hlsearch

let mapleader = " "

" Allows changing window or tab with space+{hjkl} (sucks for vsplits tho)
nnoremap <Leader>j <C-W>j
nnoremap <Leader>k <C-W>k
nnoremap <Leader>h gT
nnoremap <Leader>l gt

nnoremap <CR> i<CR><Esc>

inoremap <A-A> <C-o>A
inoremap <A-I> <C-o>I
inoremap <A-o> <C-o>o
inoremap <A-O> <C-o>O
