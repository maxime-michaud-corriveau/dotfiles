nnoremap n nzz
nnoremap gd gdzz
nnoremap '' `'zz

inoremap jj <Esc>
inoremap kj <Esc>
inoremap jk <Esc>
inoremap kk <Esc>

inoremap ZZ <Esc>ZZ

noremap <A-h> <Left>
noremap <A-j> <Down>
noremap <A-k> <Up>
noremap <A-l> <Right>

set rnu
set number

set ignorecase
set smartcase

let mapleader = " "

" Allows changing window with space+{hjkl}
nnoremap <Leader>j <C-W>j
nnoremap <Leader>k <C-W>k
nnoremap <Leader>h gT
nnoremap <Leader>l gt

" Exits insert mode after typing ;, unless it's typed twice or the next
" character is a carriage return
inoremap ; ;<Esc>
inoremap ;; ;
inoremap ;<CR> ;<CR>

