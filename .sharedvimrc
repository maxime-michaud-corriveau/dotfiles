nnoremap n nzz
nnoremap gd gdzz
nnoremap '' `'zz

inoremap jj <Esc>
inoremap kj <Esc>
inoremap jk <Esc>
inoremap kk <Esc>

inoremap ZZ <Esc>ZZ

noremap <A-h> <Left>
noremap <A-j> <Down>
noremap <A-k> <Up>
noremap <A-l> <Right>

set rnu
set number

set ignorecase
set smartcase

let mapleader = " "

" Allows changing window or tab with space+{hjkl} (sucks for vsplits tho)
nnoremap <Leader>j <C-W>j
nnoremap <Leader>k <C-W>k
nnoremap <Leader>h gT
nnoremap <Leader>l gt

nnoremap <CR> i<CR><Esc>
